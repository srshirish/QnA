@{
    ViewData["Title"] = "Home Page";
}

<style>
    .card-with-border {
        border: 1px solid #ccc;
        border-radius: 10px; /* Update border-radius value for better appearance */
        overflow: hidden; /* Add overflow property to hide any content overflowing from the card */
    }
</style>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-with-border">
                <div class="card-body text-center"> <!-- Add 'text-center' class to center the content -->
                    <h5 class="card-title mb-3">Please enter your credentials</h5> <!-- Remove 'text-center' class from the heading -->
                    <form method="post">
                        <div class="mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <p class="mt-2 mb-0">Don't have an account? <a href="#">Sign up</a></p>
                    <p class="mt-1 mb-0">Forgot password? <a href="#">Recover password</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<br>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-with-border">
                <div class="card-body text-center">
                    <h5 class="card-title mb-3">Register New User</h5>
                    <form method="post">
                        <div class="mb-3">
                            <input type="text" class="form-control" id="input-firstname" name="input-firstname" placeholder="First Name" required>
                        </div>
                        <div class="mb-3">
                            <input type="text" class="form-control" id="input-lastname" name="input-lastname" placeholder="Last Name" required>
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" id="input-email" name="input-email" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="input-password" name="input-password" placeholder="Password" required>
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="input-confirm-password" name="input-confirm-password" placeholder="Confirm Password" required>
                            <div id="password-validation-message" class="text-danger"></div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </form>
                    <p class="mt-2 mb-0">Already have an account? <a href="#">Sign in</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Script for password validation
    const passwordInput = document.getElementById('input-password');
    const confirmPasswordInput = document.getElementById('input-confirm-password');
    const validationMessage = document.getElementById('password-validation-message');

    function validatePassword() {
        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;

        if (password !== confirmPassword) {
            validationMessage.textContent = "Passwords do not match.";
        } else {
            validationMessage.textContent = "";
        }
    }

    confirmPasswordInput.addEventListener('input', validatePassword);
</script>

